<!-- Header -->
<%- include('partials/_header') -%>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation') -%>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">

        <% for(let i=0;i<posts.length;i++) { %>
        <div class="post-preview">
          <a href="/posts/<%= posts[i]._id %>">
            <h2 class="post-title">
              <%= posts[i].title %>
            </h2>
            <h3 class="post-subtitle">
              <%= posts[i].message %>
            </h3>
          </a>
          <p class="post-meta">Post Date <%= posts[i].dateCreated %></p>
        </div>
        <hr>
        <% } %>



        <!-- Pager -->
        <div class="clearfix">
          <% if(current>1) { %>
          <a class="btn btn-primary float-left" href="/?page=<%= Number(current)-Number(1) %>">&larr; Newer Posts</a>
          <% } %>
          <% if(pages!=current) { %>
          <a class="btn btn-primary float-right" href="/?page=<%= Number(current)+Number(1) %>">Older Posts &rarr;</a>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') -%>

</body>

</html>
